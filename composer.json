{
    "name": "pnobbe/flarum-ext-oauth-discord",
    "description": "Allow users to log in with Discord.",
    "type": "flarum-extension",
    "keywords": ["authentication"],
    "license": "GPL-3.0+",
    "version": "v1.0",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Patrick Nobbe",
            "email": "patrick.nobbe@hotmail.com"
        }
    ],
    "support": {
        "issues": "https://github.com/pnobbe/flarum-ext-oauth-discord/issues",
        "source": "https://github.com/pnobbe/flarum-ext-oauth-discord"
    },
    "require": {
        "flarum/core": "v0.1.0-beta.5",
        "pnobbe/oauth2-discord": "^1.0@dev"
    },
    "autoload": {
        "psr-4": {
            "pnobbe\\Auth\\Discord\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Discord Login",
            "icon": {
                "name": "discord",
                "backgroundColor": "#738bd7",
                "color": "#fff"
            }
        }
    }
}
